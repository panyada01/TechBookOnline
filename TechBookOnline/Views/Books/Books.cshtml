@{
}
@foreach (var book in Model)
{
    <div class="card">
        <img src="@book.ImageUrl" />
        <h5>@book.Title</h5>
        <p class="card-text">@book.Price</p>


        <button class="btn toggle-like position-absolute top-0 end-0 m-2"
                data-bookid="@book.BookId">
            @if (ViewBag.LikedBooks.Contains(book.BookId.ToString()))
            {
                <i class="fa fa-heart text-danger"></i>
            }
            else
            {
                <i class="fa fa-heart-o"></i>
            }
        </button>


        <a asp-action="Details" asp-route-id="@book.BookId" class="btn btn-primary">
            View Details
        </a>
    </div>
}


